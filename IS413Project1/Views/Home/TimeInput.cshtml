@{
}
@model TimeSlotViewModel

<form asp-action="TimeInput" method="post">
    <select id="TimeSlotID" name="TimeSlotID">
        @foreach (TimeSlot x in Model.TimeSlots)
        {
            <option value="@x.TimeSlotID">@x.Day @x.Time</option>
            
        }

    </select>
    <br />
    <br />

    <button type="submit" class="btn btn-sm btn-outline-success">Proceed with this time</button>
</form>