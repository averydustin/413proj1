@{
    ViewBag.Title = "Sign Up Form";
}

@model Appointment


<h1>@ViewBag.Title</h1>
<br />
<p>@ViewBag.DayTime</p>
<br />
<form asp-action="SignUp" method="post" class="m-2">
    <div asp-validation-summary="All"></div>
    <input hidden asp-for="ApptTime" value="@ViewBag.DayTime" />
    <input hidden name="TimeSlotID" value="@ViewBag.TimeSlotID" />
    <div class="form-group">
        <label asp-for="GroupName">Name of Group</label>
        <input asp-for="GroupName" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <label asp-for="GroupSize">Size of Group</label>
        <input asp-for="GroupSize" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email Address</label>
        <input asp-for="Email" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control" />
        <br />
    </div>
    <button type="submit" class="btn btn-sm btn-outline-success">Submit and sign up!</button>



</form>
