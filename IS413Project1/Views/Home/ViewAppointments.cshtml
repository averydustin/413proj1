@{
}

@model TimeSlotViewModel

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Appointment Time</th>
            <th>Group Name</th>
            <th>Group Size</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Appointment x in Model.Appointments)
        {
            <tr>
                <td class="text-left">@x.ApptTime</td>
                <td class="text-center">@x.GroupName</td>
                <td class="text-center">@x.GroupSize</td>
                <td class="text-center">@x.Email</td>
                <td class="text-center">@x.Phone</td>
            </tr>
        }
    </tbody>
</table>